{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" style="background-color: rgb(57, 63, 63); ">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h4 mb-2 font-weight-normal" style="color: ivory;">Connexion</h1>
    <label for="inputEmail" style="color: ivory;">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" style="width: 50%" required autofocus>
    <label for="inputPassword" style="color: ivory">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" style="width: 50%" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit" style="line-height: 1">
        envoie
    </button>
</form>
{% endblock %}
